    <div class="container container-vertical">
      <h2>Upload Your Files</h2>

      <form action="upload" method="post" enctype=multipart/form-data class="form">
        <label>App Name</label><br>
        <select class="select" name="app_name">
          <option value="dream">I Have A Dream</option>
        </select><br>

        <label>APK File</label><br>
        <input class="file-select" type=file name=apk_file><br>

        <label>AIA File</label><br>
        <input class="file-select" type=file name=aia_file><br>

        <input class="button submit-button" type="submit" value="Upload Files">
      </form>
    </div>
  </body>
